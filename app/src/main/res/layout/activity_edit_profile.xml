<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.User.EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/editProfileTop"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/background"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back_icon" />
                <ImageView
                    android:id="@+id/save_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/save_edit_con"
                    android:scaleType="centerCrop"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/tv_titleEditProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="Edit Profile"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="@color/white"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile_edit"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/tv_titleEditProfile"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/usericon"
                    app:civ_border_color="@android:color/transparent"
                    app:civ_border_width="2dp" />

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:layout_below="@id/editProfileTop">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Fullname"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="@color/label"/>
                <EditText
                    android:id="@+id/edt_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:background="@drawable/input_design"
                    android:hint="Fullname"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:scrollbars="vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="@color/label"/>

                <Spinner
                    android:id="@+id/spn_category"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="@color/label"/>

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:background="@drawable/input_design"
                    android:hint="Phone"
                    android:inputType="number"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:scrollbars="vertical"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="@color/label"/>

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:background="@drawable/input_design"
                    android:hint="Email"
                    android:inputType="number"
                    android:clickable="false"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:scrollbars="vertical"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textColor="@color/label"/>

                <EditText
                    android:id="@+id/edt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:background="@drawable/input_design"
                    android:hint="Location"
                    android:inputType="text"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:scrollbars="vertical"
                    />
            </LinearLayout>





        </LinearLayout>

    </RelativeLayout>






</ScrollView>
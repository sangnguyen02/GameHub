<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Admin.UserDetailActivity">

    <LinearLayout
        android:id="@+id/editProfileTop"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/background"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_icon_detailuser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/back_icon" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_userprofiledetail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/back_icon_detailuser"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/usericon"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="2dp" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/editProfileTop">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Fullname"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textColor="@color/label"/>

            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:hint="Fullname"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="2"
                android:scrollbars="vertical"
                android:focusable="false"
                android:cursorVisible="false"
                android:clickable="false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textColor="@color/label"/>

            <EditText
                android:id="@+id/edt_usergender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:hint="Gender"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="2"
                android:scrollbars="vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textColor="@color/label"/>

            <EditText
                android:id="@+id/edt_userphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:hint="Phone"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="2"
                android:scrollbars="vertical"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textColor="@color/label"/>

            <EditText
                android:id="@+id/edt_useremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:hint="Email"
                android:textAlignment="center"
                android:clickable="false"
                android:focusable="false"
                android:cursorVisible="false"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="2"
                android:scrollbars="vertical"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:textColor="@color/label"/>

            <EditText
                android:id="@+id/edt_userlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:hint="Location"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_condensed_regular"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="2"
                android:scrollbars="vertical"
                />
        </LinearLayout>





    </LinearLayout>

</RelativeLayout>